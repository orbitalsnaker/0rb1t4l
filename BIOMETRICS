<script>
    const canvas = document.getElementById('tissue-canvas');
    const ctx = canvas.getContext('2d');
    let points = [];

    function init() {
        canvas.width = canvas.offsetWidth;
        canvas.height = canvas.offsetHeight;
        ctx.fillStyle = "#080000";
        ctx.fillRect(0,0,canvas.width, canvas.height);
    }

    canvas.addEventListener('mousedown', (e) => {
        const rect = canvas.getBoundingClientRect();
        points.push({
            x: e.clientX - rect.left,
            y: e.clientY - rect.top,
            color: `rgb(${100 + Math.random()*155}, 0, 0)` // Tonos de sangre
        });
        renderVoronoi();
    });

    function renderVoronoi() {
        if(points.length === 0) return;
        const w = canvas.width;
        const h = canvas.height;
        for (let x = 0; x < w; x += 4) {
            for (let y = 0; y < h; y += 4) {
                let dMin = Infinity;
                let closest = 0;
                for (let i = 0; i < points.length; i++) {
                    const d = (x - points[i].x)**2 + (y - points[i].y)**2;
                    if (d < dMin) { dMin = d; closest = i; }
                }
                ctx.fillStyle = points[closest].color;
                ctx.fillRect(x, y, 4, 4);
            }
        }
        points.forEach(p => {
            ctx.fillStyle = '#ffcc00';
            ctx.beginPath(); ctx.arc(p.x, p.y, 2, 0, Math.PI*2); ctx.fill();
        });
    }

    function injectTrauma() {
        for(let i=0; i<5; i++) {
            points.push({
                x: Math.random()*canvas.width,
                y: Math.random()*canvas.height,
                color: `rgb(${Math.random()*50}, 0, 0)` // Zonas de necrosis (más oscuras)
            });
        }
        renderVoronoi();
        document.getElementById('turb').innerText = (Math.random()*5).toFixed(2) + "% (CRÍTICO)";
    }

    window.onload = init;
</script>
