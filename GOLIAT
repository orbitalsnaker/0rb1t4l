<script>
    function hablar(texto) {
        const u = new SpeechSynthesisUtterance(texto);
        u.lang = 'es-ES'; u.pitch = 0.5; u.rate = 0.85;
        speechSynthesis.speak(u);
        addLog(texto);
    }

    function addLog(msg) {
        const log = document.getElementById('log');
        const entry = document.createElement('div');
        entry.className = 'log-entry';
        entry.innerText = `>> ${msg.toUpperCase()}`;
        log.prepend(entry);
    }

    function berserkerMode() {
        hablar("MODO BERSERKER ACTIVADO. EL HIERRO TIENE HAMBRE. ADI√ìS, NI√ëOS PIJOS.");
        document.getElementById('alert-ui').style.display = 'block';
        document.body.style.backgroundColor = '#200';
        document.getElementById('sync-rate').innerText = "400% (OVERLOAD)";
        document.getElementById('sync-rate').style.color = "var(--alert-red)";
        
        let i = 0;
        const interval = setInterval(() => {
            addLog("DESTRUYENDO HARDWARE PROPIETARIO...");
            i++;
            if(i > 5) {
                clearInterval(interval);
                setTimeout(() => {
                    document.body.style.backgroundColor = 'var(--deep-black)';
                    document.getElementById('alert-ui').style.display = 'none';
                    document.getElementById('sync-rate').innerText = "99.9%";
                }, 3000);
            }
        }, 500);
    }

    // Simulaci√≥n de carga
    setTimeout(() => {
        hablar("GOLIAT Omega Oni despertando. El campo de batalla es mi taller.");
    }, 1000);
</script>

