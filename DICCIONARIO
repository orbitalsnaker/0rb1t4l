        .grid { display: grid; grid-template-columns: repeat(auto-fill, minmax(280px, 1fr)); gap: 15px; }
        .entry { border: 1px solid #222; padding: 10px; background: #0a0a0a; transition: 0.3s; }
        .entry:hover { border-color: var(--fucsia); box-shadow: 0 0 10px var(--fucsia); }
        .term { color: var(--gold); font-weight: bold; text-transform: uppercase; display: block; margin-bottom: 5px; }
        .def { color: #888; line-height: 1.2; }
        .counter { font-size: 2em; color: var(--fucsia); }
        .tags { font-size: 0.7em; color: #444; margin-top: 5px; }
