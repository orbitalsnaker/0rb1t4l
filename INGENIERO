<script>
let abrazos = parseInt(localStorage.abrazos || 13101310);
let kgScrap = 0;

function hablar(texto){
  const u = new SpeechSynthesisUtterance(texto);
  u.lang = "es-ES"; u.rate = 0.9; u.pitch = 0.8;
  speechSynthesis.speak(u);
}

// OJOS SHARINGAN EVOLUCIONADOS
const l = document.getElementById("left").getContext("2d");
const r = document.getElementById("right").getContext("2d");
function ojosOni(){
  [l,r].forEach(ctx=>{
    ctx.clearRect(0,0,100,100);
    ctx.fillStyle = "#000"; ctx.fillRect(0,0,100,100);
    ctx.strokeStyle = "#f00"; ctx.lineWidth = 5;
    ctx.beginPath(); ctx.arc(50,50,40,0,Math.PI*2); ctx.stroke();
    ctx.fillStyle = "#f00";
    for(let i=0;i<3;i++){
      ctx.beginPath();
      ctx.arc(50,50,20, i*2*Math.PI/3-0.5, i*2*Math.PI/3+0.5);
      ctx.fill();
    }
    // Pupila central
    ctx.fillStyle = "#fff"; ctx.beginPath(); ctx.arc(50,50,5,0,Math.PI*2); ctx.fill();
  });
}
setInterval(ojosOni, 300);

// MODO DESVALIJAR
function scrapMode(){
  hablar("Iniciando escaneo de chatarra. Detecto cobre, 18650s abandonadas y el miedo de Musk. Empezando recolección.");
  document.getElementById("status").style.background = "#ff0";
  document.getElementById("status").innerText = "MODO RECOLECCIÓN: CANIBALIZANDO EDISON HARDWARE";
  let interval = setInterval(()=>{
    kgScrap += Math.random() * 5;
    document.getElementById("scrap").textContent = kgScrap.toFixed(2);
    if(kgScrap > 50) {
      clearInterval(interval);
      hablar("Chatarrería optimizada. Tenemos material para tres motores de sodio.");
    }
  }, 500);
}

// FABRICACIÓN SOBERANA
function fabricarCaza(){
  if(kgScrap < 20) {
    hablar("Falta chatarra, rey. Necesito más metal para el fuselaje del COATL.");
    return;
  }
  hablar("Iniciando impresión 3D molecular. Forjando el interceptor COATL con el código de los 100 archivos. El cielo es nuestro.");
  document.body.style.boxShadow = "inset 0 0 100px #0ff";
  setTimeout(()=> document.body.style.boxShadow = "none", 3000);
}

// TROLL A EDISON/MUSK
function trollEdison(){
  const frases = [
    "Elon, tu hardware es una cárcel de suscripción. Estudia code, zafio.",
    "¿CyberTruck? Mis GROK lo desmantelan en 12 segundos para hacer cafeteras.",
    "Tesla era el maestro. Tú solo eres el cajero del Pentágono.",
    "Error 404: Tu ética no ha sido encontrada en Marte."
  ];
  hablar(frases[Math.floor(Math.random()*frases.length)]);
}

function kungfu(){ hablar("Modo Wing Chun activado en los servos SG90. Si me tocas, te reseteo el Kernel."); }

function humo(){
  hablar("Desapareciendo en la mística ancestral. Thuamer me protege.");
  document.getElementById("humo").style.opacity = 0.5;
  setTimeout(()=> document.getElementById("humo").style.opacity = 0, 4000);
}

function abrazar(){
  abrazos += 1313;
  localStorage.abrazos = abrazos;
  document.getElementById("hugs").textContent = abrazos.toLocaleString();
  hablar(`Abrazo número ${abrazos.toLocaleString()}. Sanando biomasa.`);
}

// FONDO VIVO (25.000 partículas)
const canvas=document.getElementById('particles'),gl=canvas.getContext('webgl');
canvas.width=innerWidth; canvas.height=innerHeight;
const pos=new Float32Array(50000);
for(let i=0;i<50000;i++) pos[i]=Math.random()*2-1;
const buf=gl.createBuffer(); gl.bindBuffer(gl.ARRAY_BUFFER,buf); gl.bufferData(gl.ARRAY_BUFFER,pos,gl.STATIC_DRAW);
const vs=`attribute vec2 p;void main(){gl_PointSize=1.5;gl_Position=vec4(p,0,1);}`, fs=`void main(){gl_FragColor=vec4(0,1,0.6,0.7);}`;
const prog=gl.createProgram();
[gl.VERTEX_SHADER,gl.FRAGMENT_SHADER].forEach((t,i)=>{const s=gl.createShader(t);gl.shaderSource(s,i?fs:vs);gl.compileShader(s);gl.attachShader(prog,s)});
gl.linkProgram(prog); gl.useProgram(prog);
const loc=gl.getAttribLocation(prog,'p'); gl.enableVertexAttribArray(loc); gl.vertexAttribPointer(loc,2,gl.FLOAT,false,0,0);
function draw(){ gl.clear(gl.COLOR_BUFFER_BIT); gl.drawArrays(gl.POINTS,0,25000); requestAnimationFrame(draw); }
draw();

setTimeout(()=>{
  hablar("Grok 4 Scraper online. Listo para desvalijar Matrix y fabricar soberanía. ¿A qué chatarrería vamos hoy, rey?");
  ojosOni();
}, 1000);
