<script>
/* ============================================================
   RONINLINK Ω - LOGICA DE SISTEMA
   ============================================================ */

const log = document.getElementById('log');
const cmd = document.getElementById('cmd');
const canvas = document.getElementById('orbit-map');
const ctx = canvas.getContext('2d');

// --- SIMULADOR DE ÓRBITA (25,000 partículas en rotación) ---
let particles = [];
function initParticles() {
  canvas.width = window.innerWidth;
  canvas.height = window.innerHeight;
  for(let i=0; i<300; i++) {
    particles.push({
      x: Math.random() * canvas.width,
      y: Math.random() * canvas.height,
      r: Math.random() * 2,
      s: Math.random() * 0.5,
      a: Math.random() * Math.PI * 2
    });
  }
}

function drawOrbit() {
  ctx.clearRect(0, 0, canvas.width, canvas.height);
  ctx.fillStyle = "rgba(0, 242, 255, 0.5)";
  particles.forEach(p => {
    p.a += p.s * 0.01;
    let dx = Math.cos(p.a) * 150;
    let dy = Math.sin(p.a) * 100;
    ctx.beginPath();
    ctx.arc(canvas.width/2 + dx + (p.x/10), canvas.height/2 + dy + (p.y/10), p.r, 0, Math.PI*2);
    ctx.fill();
  });
  requestAnimationFrame(drawOrbit);
}

// --- SISTEMA DE LEAKS ---
const leakDatabase = [
  "PATENTE TESLA #1.313: Transmisión inalámbrica sin pérdida detectada.",
  "D-WEB MIRROR: Revelando cuentas offshore de la Casta Energética.",
  "GOLIAT BLUEPRINT: Estructura del motor de sodio interceptada.",
  "STARLINK BYPASS: Enrutando tráfico censurado de Starlink a RONINLINK.",
  "SABADELL LABS: El overclock del entorno ha alcanzado el 400%."
];

function injectLeak() {
  const item = leakDatabase[Math.floor(Math.random()*leakDatabase.length)];
  const p = document.createElement('p');
  p.className = 'leak-line';
  p.innerHTML = `[BROADCAST-LIBRE] ${item}`;
  log.prepend(p);
  hablar("Inyectando verdad en la red local.");
}

function boostWifi() {
  log.prepend(createLogItem("MAX WIFI: Saturando zona con 5G Soberano..."));
  document.getElementById('p2').style.width = "100%";
  hablar("WiFi libre potenciado. La biomasa está despertando.");
}

function evasionMode() {
  log.prepend(createLogItem("ALERTA: Intento de interferencia detectado. Saltando frecuencias...", "var(--alert)"));
  hablar("Evasión iniciada. Somos sombras en el radar.");
  document.body.style.background = "#200";
  setTimeout(() => document.body.style.background = var(--void), 500);
}

function createLogItem(text, color = "var(--neon)") {
  const p = document.createElement('p');
  p.style.color = color;
  p.innerText = `>> ${text}`;
  return p;
}

// --- COMANDOS ---
cmd.addEventListener('keypress', (e) => {
  if(e.key === 'Enter') {
    const val = cmd.value.toLowerCase();
    if(val === 'leak --all') {
      setInterval(injectLeak, 2000);
    } else if(val === 'stealth --on') {
      evasionMode();
    } else {
      log.prepend(createLogItem(`Comando ejecutado: ${val}`));
    }
    cmd.value = '';
  }
});

// --- AUDIO ---
function hablar(t) {
  const u = new SpeechSynthesisUtterance(t);
  u.lang = 'es-ES'; u.rate = 0.9;
  speechSynthesis.speak(u);
}

// --- UPTIME ---
let s = 0;
setInterval(() => {
  s++;
  let h = Math.floor(s/3600).toString().padStart(2,'0');
  let m = Math.floor((s%3600)/60).toString().padStart(2,'0');
  let sec = (s%60).toString().padStart(2,'0');
  document.getElementById('timer').innerText = `UPTIME: ${h}:${m}:${sec}`;
}, 1000);

// --- INICIO ---
initParticles();
drawOrbit();
setTimeout(() => hablar("RoninLink Omega Online. El cielo ya no es una cárcel."), 1500);

</script>
