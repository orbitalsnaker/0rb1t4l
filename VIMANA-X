<script>
    const tratados = [
        "Tratado del Espacio Ultraterrestre (1967), Art. IV: Esta es zona desmilitarizada para su tecnología. La nuestra es civil.",
        "Ley de Rescate Galáctico (Apócrifa): Su satélite estaba a la deriva en la 'red Ronin'. Ahora es propiedad de la Academia.",
        "Art. 1 Convención de Chicago: Su aeronave no tiene rotores. No es una aeronave. No es de su incumbencia.",
        "Jurisdicción Roswell: Este espacio-tiempo está bajo la soberanía cuántica Ronin. Su radar es inválido.",
        "Principio de Soberanía sobre Elementos No-Identificados: Cualquier objeto volador no identificado es automáticamente de la Academia Ronin."
    ];
    const droneNames = ["Lapa de Starlink", "Lapa de GPS", "Lapa de Telecom", "Lapa de Observación", "Lapa de Frecuencia"];
    let dronesDesplegados = 3;

    function hablar(t, p=0.8) {
        const u = new SpeechSynthesisUtterance(t);
        u.lang = 'es-ES'; u.pitch = p; u.rate = 0.9;
        speechSynthesis.speak(u);
    }

    function saltoCuantico() {
        hablar("Activando salto de momentum. Inercia local reconfigurada. Disfrute del vacío existencial.", 0.4);
        document.body.style.filter = "invert(1)";
        setTimeout(() => document.body.style.filter = "none", 100);
        document.querySelector('.cockpit-frame').style.boxShadow = `0 0 100px var(--mercury-core)`;
        setTimeout(() => document.querySelector('.cockpit-frame').style.boxShadow = `0 0 50px rgba(0, 212, 255, 0.4)`, 500);
    }

    function litigioOrbital() {
        const l = tratados[Math.floor(Math.random()*tratados.length)];
        document.getElementById('legal-text').innerText = l;
        hablar("Atención, operador. " + l, 1.1);
    }

    function desplegarDrones() {
        if (dronesDesplegados < droneNames.length) {
            const droneList = document.getElementById('drone-status');
            const newDrone = document.createElement('li');
            newDrone.innerText = `[${String(dronesDesplegados + 1).padStart(2, '0')}] ${droneNames[dronesDesplegados]} - DESPLEGADO`;
            droneList.appendChild(newDrone);
            hablar(`Desplegando ${droneNames[dronesDesplegados]}. Iniciando parasitismo de señal.`);
            dronesDesplegados++;
        } else {
            hablar("Todos los drones parásitos están desplegados. La red de la Casta es nuestra.");
        }
    }

    // Inicialización
    document.addEventListener('DOMContentLoaded', () => {
        hablar("Vimana-X Espectro en línea. Soberanía cuántica establecida. El cielo es Ronin.");
    });
</script>

