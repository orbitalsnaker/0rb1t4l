<script>
    function hablar(t) {
        const u = new SpeechSynthesisUtterance(t);
        u.lang = 'es-ES'; u.pitch = 0.6; u.rate = 0.9;
        speechSynthesis.speak(u);
    }

    function litigio() {
        const leyes = [
            "Citando el Convenio de Aviación Civil: Esta unidad es un prototipo de investigación científica exento de registro.",
            "Bajo la Ley de Salvamento Terrestre, su señal de radio ha sido confiscada por interferir con nuestra navegación.",
            "Este espacio aéreo ha sido declarado Soberanía Ronin bajo el principio de 'Uti Possidetis Iuris'."
        ];
        const l = leyes[Math.floor(Math.random()*leyes.length)];
        document.getElementById('legal-msg').innerText = l;
        hablar(l);
    }
</script>

