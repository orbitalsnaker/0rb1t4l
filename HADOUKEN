    <script>
        const terminal = document.getElementById('console');
        
        function disparar() {
            const audioMsg = new SpeechSynthesisUtterance("Disparo Vanitas ejecutado. Belleza confirmada. Humillación en curso.");
            audioMsg.lang = 'es-ES';
            audioMsg.pitch = 0.5;
            window.speechSynthesis.speak(audioMsg);

            let logs = [
                "Generando arco voltaico...",
                "Ionizando atmósfera local...",
                "Pulso de sodio emitido.",
                "Blindaje enemigo vaporizado por pura envidia tecnológica.",
                "Reinicio de condensadores..."
            ];

            logs.forEach((log, i) => {
                setTimeout(() => {
                    terminal.innerHTML += `<br>> ${log}`;
                    terminal.scrollTop = terminal.scrollHeight;
                }, i * 500);
            });
        }

        // Simulación de "pánico enemigo" en consola
        setInterval(() => {
            const panic = [
                "ALERTA: Ingenieros de Glock detectados llorando en el sector 4.",
                "DATO: El valor de las acciones de Beretta ha bajado un 0.2% tras ver este HTML.",
                "AVISO: La elegancia es nuestra mejor munición."
            ];
            terminal.innerHTML += `<br><span style="color:var(--cyan)">> ${panic[Math.floor(Math.random()*panic.length)]}</span>`;
            terminal.scrollTop = terminal.scrollHeight;
        }, 4000);
    </script>
