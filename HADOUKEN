<script>
    function addLog(text) {
        const term = document.getElementById('term');
        term.innerHTML += `<br>> ${text}`;
        term.scrollTop = term.scrollHeight;
    }

    function runDiagnostics() {
        const msg = new SpeechSynthesisUtterance("Iniciando secuencia de disparo seguro. Jaula de Faraday activa. Tirador protegido. Disparando Peacemaker.");
        msg.lang = 'es-ES'; msg.pitch = 0.6;
        window.speechSynthesis.speak(msg);

        addLog("INICIANDO PULSO DE PRUEBA...");
        setTimeout(() => addLog("DIFERENCIAL DE POTENCIAL: 42KV"), 500);
        setTimeout(() => addLog("IONIZACIÓN DE SODIO COMPLETADA."), 1000);
        setTimeout(() => {
            addLog("PULSO EMITIDO. OBJETIVO VAPORIZADO.");
            alert("DISPARO COMPLETADO: El sistema ha funcionado sin retorno de corriente al tirador.");
        }, 1500);
    }
</script>

