<script>
    const canvas = document.getElementById('voronoi-engine');
    const ctx = canvas.getContext('2d');
    let points = [];

    function openTab(evt, tabName) {
        let sections = document.getElementsByClassName("section");
        for (let s of sections) s.classList.remove("visible");
        let tabs = document.getElementsByClassName("tab-btn");
        for (let t of tabs) t.classList.remove("active");
        document.getElementById(tabName).classList.add("visible");
        evt.currentTarget.classList.add("active");
        if(tabName === 'engine') initVoronoi();
    }

    function initVoronoi() {
        canvas.width = canvas.offsetWidth;
        canvas.height = canvas.offsetHeight;
        draw();
    }

    canvas.addEventListener('click', (e) => {
        const rect = canvas.getBoundingClientRect();
        points.push({
            x: e.clientX - rect.left,
            y: e.clientY - rect.top,
            color: `rgb(${Math.random()*100}, ${Math.random()*20}, ${Math.random()*20})`
        });
        document.getElementById('v-data').innerText = `POINTS: ${points.length} | LATENCY: 0.04ms | STATUS: ANALYZING_SPIN`;
        draw();
    });

    function draw() {
        if(points.length === 0) return;
        const w = canvas.width;
        const h = canvas.height;
        const imageData = ctx.createImageData(w, h);
        
        for (let y = 0; y < h; y += 2) {
            for (let x = 0; x < w; x += 2) {
                let dMin = Infinity;
                let closest = 0;
                for (let i = 0; i < points.length; i++) {
                    const d = (x - points[i].x)**2 + (y - points[i].y)**2;
                    if (d < dMin) { dMin = d; closest = i; }
                }
                ctx.fillStyle = points[closest].color;
                ctx.fillRect(x, y, 2, 2);
            }
        }
        
        points.forEach(p => {
            ctx.fillStyle = '#ff0033';
            ctx.beginPath(); ctx.arc(p.x, p.y, 4, 0, Math.PI*2); ctx.fill();
        });
    }

    function resetVoronoi() { points = []; ctx.clearRect(0,0,canvas.width,canvas.height); }
</script>
